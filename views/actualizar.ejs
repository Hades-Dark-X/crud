<div class="container">
    <h1>Editar Producto</h1>
    <form action="/productos/actualizar/<%= producto.id %>" method="POST" enctype="application/x-www-form-urlencoded">
        <input type="hidden" name="_method" value="PUT"> <!-- Método HTTP PUT -->

        <div class="form-group">
            <label for="titulo">Título:</label>
            <input type="text" id="titulo" name="titulo" value="<%= producto.titulo %>" required>
        </div>

        <div class="form-group">
            <label for="descripcion">Descripción:</label>
            <input type="text" id="descripcion" name="descripcion" value="<%= producto.descripcion %>" required>
        </div>

        <div class="form-group">
            <label for="precio">Precio:</label>
            <input type="number" id="precio" name="precio" value="<%= producto.precio %>" step="0.01" required>
        </div>

        <div class="form-group">
            <label for="stock">Stock:</label>
            <select id="stock" name="stock" required>
                <option value="true" <%=producto.stock ? 'selected' : '' %>>En existencia</option>
                <option value="false" <%=!producto.stock ? 'selected' : '' %>>Fuera de stock</option>
            </select>
        </div>

        <button type="submit">Actualizar Producto</button>
    </form>